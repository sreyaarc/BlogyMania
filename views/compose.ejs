<%- include("header") -%>

<div class="navbar">
    <a class="logo aTag" href="/"><img class="logoImg" src="/Icons/unicorn.png"/> BlogyMania</a>
    <div id="all">
        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
        <div class="subNav">
            <div class="innerSubnav">
                <a href="/" class="aTag">Home</a>
                <a href="/compose" class="aTag">Compose</a>
                <a href="/<%= logged %>" class="aTag"><%= logged %></a>
                <a href="/<%= isRegistered %>" class="aTag" id="<%= isRegistered %>"><%= isRegistered %></a>
            </div>  
        </div>
    </div>
</div>
<div class="newForm">
    <form action="/compose" method="post" class="form" id="compose">
        <input type="text" name="image" value="" class="inputImg" placeholder="Paste your image url" autocomplete="off">
        <input type="text" name="title" value="" class="inputTitle" placeholder="Enter your title" autocomplete="off">
        <textarea name="content" class="inputContent" cols="30" rows="10" placeholder="Enter your text"></textarea>
        <button type="submit" class="btn">ADD</button>
    </form>
</div>
    

<%- include("footer") -%>